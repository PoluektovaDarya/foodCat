<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/parent" >

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora_bold"
        android:text="Ваш кот:"
        android:textColor="@color/niama"
        android:textSize="20sp"
        tools:ignore="HardcodedText"
        android:gravity="center"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora_bold"
        android:text="Выберите пол:"
        android:textColor="@color/niama"
        android:textSize="15sp"
        tools:ignore="HardcodedText"
        android:gravity="center"/>
    <Spinner
        android:id="@+id/spGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora_bold"
        />

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora_bold"
        android:text="Выберите возраст:"
        android:textColor="@color/niama"
        android:textSize="15sp"
        tools:ignore="HardcodedText"
        android:gravity="center"/>
    <Spinner
        android:id="@+id/spAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora_bold"
        />

    <TextView
        android:id="@+id/text5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora_bold"
        android:text="Выберите телосложение:"
        android:textColor="@color/niama"
        android:textSize="15sp"
        tools:ignore="HardcodedText"
        android:gravity="center"/>
    <Spinner
        android:id="@+id/spBodyType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora_bold"
        />

    <TextView
        android:id="@+id/text6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora_bold"
        android:text="Стерилизована/кастрирован:"
        android:textColor="@color/niama"
        android:textSize="15sp"
        tools:ignore="HardcodedText"
        android:gravity="center"/>
    <Spinner
        android:id="@+id/spYesNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora_bold"
        />

    <Button
        android:id="@+id/btnSee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora_bold"
        android:text="Посмотреть результаты"
        />

    <TextView
        android:id="@+id/textFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora_bold"

        android:textColor="@color/niama"
        android:textSize="20sp"
        tools:ignore="HardcodedText"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/foodImage"
        android:layout_width="160dp"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/textQuantityFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lora_bold"

        android:textColor="@color/niama"
        android:textSize="20sp"
        tools:ignore="HardcodedText"
        android:gravity="center"/>
</LinearLayout>